<html>
<head>
<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<style>
/* Custom CSS for Advocate Details Section */
body{
}

#advocateDetails {
  background-color: #f8f9fa;
  padding: 20px;
  border-radius: 10px;
}

.details-box {
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.details-box p {
  margin-bottom: 10px;
}

.details-box ul {
  margin-top: 10px;
}

/* Profile Picture Styling */
.img-fluid {
  max-width: 100%;
}

.rounded-circle {
  border-radius: 50%;
}

.profile{
 width:200px;
 height:200px;
}


</style>


</head>
<body>

<div class="container">
  <!-- Advocate Details Section -->
  <section id="advocateDetails" class="mb-5">
    <h2>let's know about the advocate</h2>
      <div class="row">
      <div class=col-md-4>
      <img class="profile" src="images/profile-image.png">
      </div>
      <div class="col-md-4">
        <p><strong>Name:</strong>  {{user.full_name}}</p>
        <p><strong>Profile:</strong> {{user.areas_of_practice}}</p>
        <p><strong>Category:</strong> Legal</p>
        <p><strong>No. of Clients:</strong> 50</p>
        <p><strong>Current Cases Handling:</strong> 10</p>
      </div>
      <div class="col-md-4">
        <p><strong>Contact Details:</strong></p>
        <ul>
          <li><strong>Email:</strong> {{user.email}}</li>
          <li><strong>Phone:</strong> {{user.firm_phone}}</li>
          <li><strong>Address:</strong> {{user.firm_address}}</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Charts Section -->
  <section id="charts" class="row">
    <!-- Chart 1: Win Rate in Specific Case -->
    <div class="col-md-6 col-lg-6 mb-4">
      <canvas id="myChart" style="width:100%;max-width:600px"></canvas>
    </div>

    <!-- Chart 2: Case Success Rate -->
    <div class="col-md-6 col-lg-6 mb-4">
      <canvas id="caseSuccessRateChart" width="500" height="300"></canvas>
    </div>
<br>
<br>
<br>
    <!-- Chart 3: Client Satisfaction Rate -->
    <div class="col-md-6 col-lg-6 mb-4">
      <canvas id="satisfactionBarChart" width="800" height="400"></canvas>
    </div>
    <!-- Chart 4: Communication Responsiveness -->
    <div class="col-md-6 col-lg-6 mb-4">
      <canvas id="responsivenessPieChart" width="800" height="400"></canvas>
    </div>

    <!-- Chart 5: Referral Rate -->
    <div class="col-md-6 col-lg-4 mb-4">
      <canvas id="settlementRateDoughnutChart" width="400" height="400"></canvas>
    </div>


<div class="col-lg-8">
<!------>




<!------->

  </div>
  </section>
</div>


</body>
<script>
 
  //1-------Win Rate in Specific Case Types - Bar Chart*     <--(* *)/
  
  var xValues = ['Criminal', 'Civil', 'Family', 'Other'];
  var yValues = [55, 49, 44, 24];
  var barColors = ["red", "green","blue","orange"];
  
  new Chart("myChart", {
    type: "bar",
    data: {
      labels: xValues,
      datasets: [{
        backgroundColor: barColors,
        data: yValues
      }]
    },
    options: {
      legend: {display: false},
      title: {
        display: true,
        text: "caseSuccessRateData"
      }
    }
  });


  //2-----Case Success Rate <--(* *)/
  // Sample data for demonstration
  var s1=50;
  
  const caseSuccessRateData = {
    labels: ['jan','feb','march','april','may','jun','july','aug','sep','oct','nov','dec'],
    datasets: [{
      label: 'Case Success Rate',
      data: [s1, 85, 90, 75, 30, 50, 70, 20, 30, 45, 10, 100],
      backgroundColor: 'rgba(75, 192, 192, 0.5)',
      borderColor: 'rgba(75, 192, 192, 1)',
      borderWidth: 1
    }]
  };
  
  
  
  // Initialize charts
  const caseSuccessRateChartCanvas = document.getElementById('caseSuccessRateChart').getContext('2d');
  new Chart(caseSuccessRateChartCanvas, {
    type: 'line',
    data: caseSuccessRateData,
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
 
  
  //3-------Client statisfication rate*<--(* *)/
  
  // Sample data for demonstration
  const satisfactionData = {
    labels: ['Very Dissatisfied', 'Dissatisfied', 'Neutral', 'Satisfied', 'Very Satisfied'],
    datasets: [{
      label: 'Client Satisfaction Ratings',
      data: [10, 20, 30, 25, 15], // Example data (percentage distribution)
      backgroundColor: [
        'rgba(255, 99, 132, 0.5)',
        'rgba(255, 159, 64, 0.5)',
        'rgba(255, 205, 86, 0.5)',
        'rgba(75, 192, 192, 0.5)',
        'rgba(54, 162, 235, 0.5)'
      ],
      borderColor: [
        'rgba(255, 99, 132, 1)',
        'rgba(255, 159, 64, 1)',
        'rgba(255, 205, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(54, 162, 235, 1)'
      ],
      borderWidth: 1
    }]
  };
  
  // Initialize chart
  const satisfactionBarChartCanvas = document.getElementById('satisfactionBarChart').getContext('2d');
  new Chart(satisfactionBarChartCanvas, {
    type: 'horizontalBar',
    data: satisfactionData,
    options: {
      scales: {
        xAxes: [{
          ticks: {
            beginAtZero: true,
            max: 100,
            callback: function(value) {
              return value + '%';
            }
          }
        }]
      }
    }
  });
  
  //4 commnuication responsive       <--(* *)/
  // Sample data for demonstration
  const responsivenessData = {
    labels: ['Listening', 'Clarity', 'Timeliness', 'Professionalism', 'Courtesy'],
    datasets: [{
      label: 'Communication Responsiveness',
      data: [1, 3, 4, 2, 7], // Example data (rating from 1 to 5)
      backgroundColor: [
        'rgba(255, 99, 132, 0.5)',
        'rgba(54, 162, 235, 0.5)',
        'rgba(255, 205, 86, 0.5)',
        'rgba(75, 192, 192, 0.5)',
        'rgba(153, 102, 255, 0.5)'
      ],
      borderColor: [ 
        'rgba(255, 99, 132, 1)',
        'rgba(54, 162, 235, 1)',
        'rgba(255, 205, 86, 1)',
        'rgba(75, 192, 192, 1)',
        'rgba(153, 102, 255, 1)'
      ],
      borderWidth: 1
    }]
  };
  
  // Initialize pie chart
  const responsivenessPieChartCanvas = document.getElementById('responsivenessPieChart').getContext('2d');
  new Chart(responsivenessPieChartCanvas, {
    type: 'pie',
    data: responsivenessData
  });
    
  //5 settlement referralRateData                                <--(* *)/
  // Sample data for demonstration
  const settlementRateData = {
    labels: ['client refer', ' client not refer'],
    datasets: [{
      label: 'Settlement Rate',
      data: [75, 25], // Example data (percentage distribution)
      backgroundColor: [
        'rgba(75, 192, 192, 0.5)',
        'rgba(255, 99, 132, 0.5)'
      ],
      borderColor: [
        'rgba(75, 192, 192, 1)',
        'rgba(255, 99, 132, 1)'
      ],
      borderWidth: 1
    }]
  };
  
  // Initialize doughnut chart
  const settlementRateDoughnutChartCanvas = document.getElementById('settlementRateDoughnutChart').getContext('2d');
  new Chart(settlementRateDoughnutChartCanvas, {
    type: 'doughnut',
    data: settlementRateData,
    options: {
      cutoutPercentage: 70 // Adjust the size of the inner circle
    }
  });
</script>
