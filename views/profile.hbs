<!-- start Profile section -->
<div class="container my-5">
    <div class="card shadow">
        <div class="card-body">
            <div class="row">
                <!-- Profile Picture and Details -->
                <div class="col-md-4 text-center">
                    <img src="images/profile-picture.png" alt="Profile Picture" class="img-fluid rounded-circle profile-picture mb-3 OneProfileImage">
                    <h2>{{user.NAME}}</h2>
                    <p>Email: <span>{{user.EMAIL}}</span></p>
                   <!-- <p>Education: <span>Bachelor's in Law</span></p>-->
                    <!-- Edit Profile Button -->
                    <a href="/edit-profile" class="btn btn-outline-primary mt-3">
                        <i class="fa fa-edit"></i> Edit Profile
                    </a>
                </div>

                <!-- Profile Statistics and Actions -->
                <div class="col-md-8">
                    <!-- Advocates Linked -->
                    <div class="mb-3">
                        <h4>Total Number of Advocates Linked</h4>
                        <p><img src="images/advocate.png" alt="Advocate Icon" class="icon"> <b>10</b></p>
                    </div>

                    <!-- Requested List -->
                    <div class="mb-3">
                        <h4>Requested List</h4>
                        <ul class="list-group">
                            <li class="list-group-item">Name 1</li>
                            <li class="list-group-item">Name 2</li>
                            <!-- Add more requested advocates here -->
                        </ul>
                        <a href="/requests" class="btn btn-info mt-2">View Requests</a>
                    </div>

                    <!-- Profile Options -->
                    <div class="mt-4">
                        <button class="btn btn-success me-2">Acknowledge</button>
                        <button class="btn btn-warning me-2">Appointment</button>
                        <button class="btn btn-secondary">Message</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Profile Section -->



	
<!--  start appoinment section -->    

<!-- New Box for Appointment List -->
<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Appointment List</h4>
        </div>
        <div class="card-body">
            <!-- Table to Display Appointments -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Advocate</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Appointment Data -->
                    <tr>
                        <td>Advocate Name 1</td>
                        <td>2024-04-20</td>
                        <td>10:00 AM</td>
                        <td>
                            <button class="btn btn-sm btn-info">View</button>
                            <button class="btn btn-sm btn-danger">Cancel</button>
                        </td>
                    </tr>
                    <tr>
                        <td>Advocate Name 2</td>
                        <td>2024-04-22</td>
                        <td>2:00 PM</td>
                        <td>
                            <button class="btn btn-sm btn-info">View</button>
                            <button class="btn btn-sm btn-danger">Cancel</button>
                        </td>
                    </tr>
                    <!-- Add more appointments here -->
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--end appoinment section -->
<!-- New Box for Creating Appointments -->
<div id="new-appointment" class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4>Create a New Appointment</h4>
        </div>
        <div class="card-body">
            <!-- Form for Creating Appointments -->
            <form id="appointment-form">
                <div class="mb-3">
                    <label for="advocate" class="form-label">Select Advocate</label>
                    <select class="form-select" id="advocate" required>
                        <option value="" disabled selected>Select Advocate</option>
                        <!-- Populate this list with advocates from your database -->
                        <option value="advocate1">Advocate Name 1</option>
                        <option value="advocate2">Advocate Name 2</option>
                        <!-- Add more advocates here -->
                    </select>
                </div>
                <div class="mb-3">
                    <label for="appointment-date" class="form-label">Appointment Date</label>
                    <input type="date" class="form-control" id="appointment-date" required>
                </div>
                <div class="mb-3">
                    <label for="appointment-time" class="form-label">Appointment Time</label>
                    <input type="time" class="form-control" id="appointment-time" required>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Schedule Appointment</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- end of creating appointment creation  -->

